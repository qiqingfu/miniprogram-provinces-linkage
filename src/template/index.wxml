<view class="q-select">
	<picker-view class="picker-view" indicator-style="height: 50px;" style="width: 100%; height: 300px" value="{{value}}" bindchange="bindChange">
	<picker-view-column>
		<view wx:for="{{areaPicker.provinceData}}" wx:key="code" class="addr-item">{{item.nameDot}}</view>
	</picker-view-column>
	<picker-view-column>
		<view wx:for="{{areaPicker.cityData}}" wx:key="code" class="addr-item">{{item.nameDot}}</view>
	</picker-view-column>
	<picker-view-column wx:if="{{hideDistrict}}">
		<view wx:for="{{areaPicker.districtData}}" wx:key="code" class="addr-item">{{item.nameDot}}</view>
	</picker-view-column>
</picker-view>
</view> 